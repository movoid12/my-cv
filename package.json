{
  "name": "my-cv",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build",
    "check": "tsc",
    "format": "biome format --write .",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome lint ./src && biome check --apply ./src",
    "preview": "vite preview",
    "intl": "pnpm run intl:extract && pnpm run intl:compile && pnpm run intl:clean",
    "intl:extract": "formatjs extract 'src/**/*.{tsx,ts}' --format=simple --out-file=messages.json --throws",
    "intl:compile": "formatjs compile messages.json --format=simple --out-file=src/messages/de.json",
    "intl:clean": "rm messages.json"
  },
  "dependencies": {
    "@mantine/core": "7.17.0",
    "@mantine/hooks": "7.17.0",
    "@tabler/icons": "3.1.0",
    "@tabler/icons-react": "3.1.0",
    "clsx": "2.1.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-intl": "7.1.6",
    "swr": "2.2.5",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@formatjs/cli": "6.6.1",
    "@total-typescript/tsconfig": "1.0.4",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@vitejs/plugin-react": "4.3.4",
    "postcss": "8.5.2",
    "postcss-preset-mantine": "1.17.0",
    "postcss-simple-vars": "7.0.1",
    "typescript": "5.7.3",
    "vite": "6.1.0"
  },
  "pnpm": {
    "overrides": {
      "braces@<3.0.3": ">=3.0.3",
      "micromatch@<4.0.8": ">=4.0.8",
      "esbuild@<=0.24.2": ">=0.25.0"
    }
  }
}
